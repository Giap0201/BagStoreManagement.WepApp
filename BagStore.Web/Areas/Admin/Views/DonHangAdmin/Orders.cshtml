@model IEnumerable<BagStore.Domain.Entities.DonHang>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered table-striped" id="adminOrdersTable">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dh in Model)
        {
            <tr>
                <td>@dh.MaDonHang</td>
                <td>@dh.KhachHang.TenKH</td>
                <td>@dh.NgayDatHang.ToString("dd/MM/yyyy")</td>
                <td>@dh.TongTien.ToString("C0")</td>
                <td>
                    <select class="form-select status-dropdown" data-ma-dh="@dh.MaDonHang">
                        <option value="Chờ xác nhận" @(dh.TrangThai == "Chờ xác nhận" ? "selected" : "")>Chờ xác nhận</option>
                        <option value="Hoàn thành" @(dh.TrangThai == "Hoàn thành" ? "selected" : "")>Hoàn thành</option>
                        <option value="Hủy" @(dh.TrangThai == "Hủy" ? "selected" : "")>Hủy</option>
                    </select>
                </td>
                <td>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="collapse" data-bs-target="#details-@dh.MaDonHang">Chi tiết</button>
                </td>
            </tr>
            <tr id="details-@dh.MaDonHang" class="collapse">
                <td colspan="6">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Giá bán</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ct in dh.ChiTietDonHangs)
                            {
                                <tr>
                                    <td>@ct.ChiTietSanPham.SanPham.TenSP</td>
                                    <td>@ct.SoLuong</td>
                                    <td>@ct.GiaBan.ToString("C0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#adminOrdersTable').DataTable();

            $('.status-dropdown').change(function () {
                var maDH = $(this).data('ma-dh');
                var trangThai = $(this).val();

                if(confirm('Bạn có chắc chắn muốn đổi trạng thái?')) {
                    $.post('/Admin/Orders/UpdateStatus', { maDonHang: maDH, trangThai: trangThai })
                        .done(function () { location.reload(); })
                        .fail(function () { alert('Cập nhật thất bại'); });
                }
            });
        });
    </script>
}
