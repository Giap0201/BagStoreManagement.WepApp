@using BagStore.Web.Models.Entities
@model ApplicationUser

@{
    ViewData["Title"] = "Xóa khách hàng";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    <strong>Cảnh báo:</strong> Hành động này sẽ xóa vĩnh viễn tài khoản khách hàng.
</div>

<div class="mb-3">
    <p><strong>Tên đăng nhập:</strong> @Model.UserName</p>
    <p><strong>Họ tên:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<form asp-area="Admin" asp-controller="Customer" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa tài khoản này?');">Xác nhận xóa</button>
    <a asp-area="Admin" asp-controller="Customer" asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
</form>
