@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        const apiUrl = "/api/Admin/CustomerApi";
        const token = sessionStorage.getItem("jwtToken");

        // ----------------- Load danh sách -----------------
        function loadCustomers() {
            $.ajax({
                url: apiUrl + "/all",
                headers: { "Authorization": "Bearer " + token },
                success: function (res) {
                    const tbody = $("#tblCustomers tbody");
                    tbody.empty();
                    $.each(res, function (i, c) {
                        const row = `
                            <tr>
                                <td><i class="fa fa-user text-secondary me-1"></i>${c.userName}</td>
                                <td>${c.fullName ?? ""}</td>
                                <td>${c.email}</td>
                                <td>${c.phoneNumber ?? ""}</td>
                                <td>${c.ngaySinh ? new Date(c.ngaySinh).toLocaleDateString() : ""}</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-primary btnEdit me-1" data-id="${c.id}">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger btnDelete me-1" data-id="${c.id}">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-warning btnReset" data-id="${c.id}">
                                        <i class="fa fa-key"></i>
                                    </button>
                                </td>
                            </tr>`;
                        tbody.append(row);
                    });
                },
                error: function (xhr) {
                    console.error(xhr);
                    alert("Không tải được danh sách khách hàng.");
                }
            });
        }

        // ----------------- Hiện modal tạo mới -----------------
        $("#btnShowCreate").click(function () {
            $("#modalTitle").text("Thêm khách hàng");
            $("#formCustomer")[0].reset();
            $("#Id").val("");
            $("#defaultPasswordNotice").show(); // 👉 Hiện thông báo mật khẩu mặc định
            $("#modalCustomer").modal("show");
        });

        // ----------------- Lưu (Thêm hoặc Sửa) -----------------
        $("#formCustomer").submit(function (e) {
            e.preventDefault();

            const id = $("#Id").val();
            const customer = {
                id: id,
                userName: $("#UserName").val(),
                fullName: $("#FullName").val(),
                email: $("#Email").val(),
                phoneNumber: $("#PhoneNumber").val(),
                ngaySinh: $("#NgaySinh").val() ? new Date($("#NgaySinh").val()).toISOString() : null,
                password: id ? null : "Customer@123"
            };

            const method = id ? "PUT" : "POST";
            const url = id ? `${apiUrl}/${id}` : apiUrl;

            $.ajax({
                url: url,
                method: method,
                headers: { "Authorization": "Bearer " + token },
                contentType: "application/json",
                data: JSON.stringify(customer),
                success: function () {
                    $("#modalCustomer").modal("hide");
                    loadCustomers();
                    alert("Lưu khách hàng thành công!");
                },
                error: function (xhr) {
                    console.error("❌ Lỗi khi lưu:", xhr.responseText);
                    alert("Lưu thất bại!");
                }
            });
        });

        // ----------------- Sửa -----------------
        $(document).on("click", ".btnEdit", function () {
            const id = $(this).data("id");
            $.ajax({
                url: apiUrl + "/" + id,
                headers: { "Authorization": "Bearer " + token },
                success: function (c) {
                    $("#modalTitle").text("Sửa khách hàng");
                    $("#Id").val(c.id);
                    $("#UserName").val(c.userName);
                    $("#FullName").val(c.fullName);
                    $("#Email").val(c.email);
                    $("#PhoneNumber").val(c.phoneNumber);
                    $("#NgaySinh").val(c.ngaySinh ? c.ngaySinh.split("T")[0] : "");
                    $("#defaultPasswordNotice").hide(); // 👉 Ẩn khi sửa
                    $("#modalCustomer").modal("show");
                },
                error: function () {
                    alert("Không lấy được dữ liệu khách hàng.");
                }
            });
        });

        // ----------------- Xoá -----------------
        $(document).on("click", ".btnDelete", function () {
            const id = $(this).data("id");
            if (!confirm("Bạn có chắc chắn muốn xoá khách hàng này không?")) return;
            $.ajax({
                url: apiUrl + "/" + id,
                method: "DELETE",
                headers: { "Authorization": "Bearer " + token },
                success: function () {
                    loadCustomers();
                    alert("Đã xoá thành công!");
                },
                error: function () {
                    alert("Lỗi khi xoá khách hàng.");
                }
            });
        });

        // ----------------- Reset mật khẩu -----------------
        $(document).on("click", ".btnReset", function () {
            const id = $(this).data("id");
            if (!confirm("Đặt lại mật khẩu về Customer@123 ?")) return;
            $.ajax({
                url: apiUrl + "/resetpassword",
                method: "POST",
                headers: { "Authorization": "Bearer " + token },
                contentType: "application/json",
                data: JSON.stringify({ id: id, newPassword: "Customer@123" }),
                success: function (res) {
                    alert(res.message);
                },
                error: function (xhr) {
                    alert("Lỗi reset mật khẩu: " + xhr.responseText);
                }
            });
        });

        $(document).ready(loadCustomers);
    </script>
}

