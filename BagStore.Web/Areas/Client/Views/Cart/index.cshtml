@{
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    ViewData["Title"] = "Giỏ hàng của bạn";
}

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Shopping Cart</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Shopping Cart</p>
        </div>
    </div>
</div>
<div class="container-fluid pt-5" id="cart-container">
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            const userId = '@(ViewBag.UserId)';
            console.log("🔹 User ID từ ViewBag:", userId);

            const apiBaseUrl = `https://localhost:7013/api/cart`;

            // Hàm load giỏ hàng
            function loadCart() {
                $.ajax({
                    url: `${apiBaseUrl}/${userId}`,
                    method: 'GET',
                    success: function(cart) {
                        console.log("✅ Dữ liệu giỏ hàng nhận được:", cart);

                        if (!cart || !cart.items || cart.items.length === 0) {
                            $('#cart-container').html('<p>Giỏ hàng trống.</p>');
                            return;
                        }

                        let html = `
                        <div class="row px-xl-5">
                            <div class="col-lg-8 table-responsive mb-5">
                                <table class="table table-bordered text-center mb-0">
                                    <thead class="bg-secondary text-dark">
                                        <tr>
                                            <th>Sản phẩm</th>
                                            <th>Đơn giá</th>
                                            <th>Số lượng</th>
                                            <th>Thành tiền</th>
                                            <th>Xóa</th>
                                        </tr>
                                    </thead>
                                    <tbody class="align-middle">`;

                        let subtotal = 0;
                        cart.items.forEach(item => {
                            subtotal += item.thanhTien || 0;
                            html += `
                            <tr data-product-id="${item.maChiTietSP}">
                                <td class="align-middle"><img src="${item.duongDanAnh}" alt="${item.tenSP}" style="width: 50px;"> ${item.tenSP}</td>
                                <td class="align-middle">${(item.giaBan || 0).toLocaleString()} ₫</td>
                                <td class="align-middle">
                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <input type="text" class="form-control form-control-sm bg-secondary text-center" value="${item.soLuong}">
                                    </div>
                                </td>
                                <td class="align-middle">${(item.thanhTien || 0).toLocaleString()} ₫</td>
                                <td class="align-middle">
                                    <button class="btn btn-sm btn-primary btn-delete-item">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </td>
                            </tr>`;
                        });
                        const shipping = 35000; 
                        const total = subtotal + shipping;

                        html += `
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-lg-4">
                                <div class="card border-secondary mb-5">
                                    <div class="card-header bg-secondary border-0">
                                        <h4 class="font-weight-semi-bold m-0">Cart Summary</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-3 pt-1">
                                            <h6 class="font-weight-medium">Subtotal</h6>
                                            <h6 class="font-weight-medium">${subtotal.toLocaleString()} ₫</h6>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <h6 class="font-weight-medium">Shipping</h6>
                                            <h6 class="font-weight-medium">${shipping.toLocaleString()} ₫</h6>
                                        </div>
                                    </div>
                                    <div class="card-footer border-secondary bg-transparent">
                                        <div class="d-flex justify-content-between mt-2">
                                            <h5 class="font-weight-bold">Total</h5>
                                            <h5 class="font-weight-bold">${total.toLocaleString()} ₫</h5>
                                        </div>
                                        <button class="btn btn-block btn-primary my-3 py-3">Proceed To Checkout</button>
                                    </div>
                                </div>
                            </div>
                        </div>`;

                        $('#cart-container').html(html);
                    },
                    error: function(xhr) {
                        console.error("❌ Lỗi khi tải giỏ hàng:", xhr);
                        let message = "Lỗi khi tải giỏ hàng.";
                        if (xhr.responseJSON && xhr.responseJSON.message)
                            message = xhr.responseJSON.message;
                        $('#cart-container').html(`<p>${message}</p>`);
                    }
                });
            }

            // Gọi lần đầu để load cart
            loadCart();

            // Gán sự kiện xoá (dùng event delegation vì nút được tạo động)
            $('#cart-container').on('click', '.btn-delete-item', function() {
                const row = $(this).closest('tr');
                const maChiTietSP = row.data('product-id');
                     console.log(" Mã Chi Tiết SP lấy được:", maChiTietSP);
                     console.log(" Mã KH:", userId);

        if (!maChiTietSP) {
            alert("Không lấy được mã chi tiết sản phẩm!");
            return;
        }

                if (!confirm('Bạn có chắc muốn xóa sản phẩm này khỏi giỏ hàng?')) return;

                $.ajax({
                    url: `${apiBaseUrl}/${userId}/${maChiTietSP}`,
                    method: 'DELETE',
                    success: function(res) {
                        console.log("🗑️ Xóa thành công:", res);
                        alert(res.message || "Đã xóa sản phẩm khỏi giỏ hàng.");
                      
                        loadCart();

                        
                    },
                    error: function(xhr) {
                        console.error("❌ Lỗi khi xóa:", xhr);
                        alert(xhr.responseJSON?.message || "Không thể xóa sản phẩm.");
                    }
                });
            });
        });
    </script>
}


                     