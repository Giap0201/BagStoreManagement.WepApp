                    <a href="@Url.Action("Index", "Home", new { loaiTuiId = item.MaLoaiTui })" class="nav-item nav-link">
                        @item.TenLoaiTui
                    </a>
                }
            }
            else
            {
                <span class="text-muted px-3">Không có danh mục nào</span>
            }

        </div>
