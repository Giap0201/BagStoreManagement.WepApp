@using Microsoft.AspNetCore.Identity
@using BagStore.Web.Models.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BagStore</title>

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
        }

        /* Navbar */
        .navbar {
            background-color: #212529 !important;
            box-shadow: 0 2px 6px rgba(0,0,0,0.2);
        }

        .navbar-brand {
            font-size: 1.6rem;
            font-weight: 700;
            color: #ffc107 !important;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #ffffff !important;
            transition: 0.2s;
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }

        /* Buttons */
        .btn-yellow {
            background-color: #ffc107;
            color: #000;
            border: none;
            margin: 0 10px 10px 0;
        }

            .btn-yellow:hover {
                background-color: #ffb300;
                color: #000;
            }

        footer {
            background-color: #212529;
            color: #ccc;
            text-align: center;
            padding: 20px;
            margin-top: 50px;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- 🟡 NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark py-3">
        <div class="container">
            <a class="navbar-brand" asp-area="Client" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-bag-shopping me-2"></i>BagStore
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Client" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Client" asp-controller="Product" asp-action="Index">Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Client" asp-controller="Home" asp-action="About">Giới thiệu</a>
                    </li>
                </ul>

                @* <!-- 🔍 Thanh tìm kiếm -->
                <form class="d-flex me-3" asp-area="Client" asp-controller="Product" asp-action="Search">
                    <input class="form-control me-2" type="search" placeholder="Tìm túi xách..." name="keyword">
                    <button class="btn btn-yellow" type="submit"><i class="fa fa-search"></i></button>
                </form> *@

                <!-- 👤 User Menu -->
                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="userMenu" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-user-circle"></i> @(UserManager.GetUserName(User))
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-area="Client" asp-controller="Account" asp-action="Profile">Hồ sơ</a></li>
                                <li><a class="dropdown-item" asp-area="Client" asp-controller="Account" asp-action="ChangePassword">Đổi mật khẩu</a></li>
                                <li>
                                    <form asp-area="Client" asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item p-0 m-0">
                                        <button type="submit" class="btn btn-link text-start w-100">Đăng xuất</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-yellow me-2" asp-area="Client" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light" asp-area="Client" asp-controller="Account" asp-action="Register">Đăng ký</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- 🔸 CONTENT -->
    <main class="flex-grow-1">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- 🔹 FOOTER -->
    <footer class="mt-auto">
        <div class="text-center py-3" style="background-color: #212529; color: #ccc;">
            &copy; 2025 BagStore. All rights reserved.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>