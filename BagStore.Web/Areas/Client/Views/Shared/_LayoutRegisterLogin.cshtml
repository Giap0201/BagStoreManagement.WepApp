@using Microsoft.AspNetCore.Identity
@using BagStore.Web.Models.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BagStore</title>

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        :root {
            --white: #fff;
            --gray: #6c757d;
            --gray-dark: #343a40;
            --primary: #D19C97;
            --secondary: #EDF1FF;
            --light: #FFFFFF;
            --dark: #1C1C1C;
        }

        body {
            background-color: var(--secondary);
            font-family: 'Segoe UI', sans-serif;
            color: var(--dark);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar */
        .navbar {
            background-color: var(--light) !important;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.7rem;
            font-weight: 700;
            color: var(--primary) !important;
            letter-spacing: 1px;
        }

        .nav-link {
            color: var(--dark) !important;
            font-weight: 500;
            transition: color 0.2s ease-in-out;
        }

            .nav-link:hover,
            .nav-link.active {
                color: var(--primary) !important;
            }

        /* Buttons */
        .btn-primary-custom {
            background-color: var(--primary);
            border: none;
            color: var(--white);
            transition: all 0.3s ease;
        }

            .btn-primary-custom:hover {
                background-color: #c1847c;
                color: var(--white);
            }

        .btn-outline-custom {
            border: 1px solid var(--primary);
            color: var(--primary);
            transition: all 0.3s ease;
        }

            .btn-outline-custom:hover {
                background-color: var(--primary);
                color: var(--white);
            }

        /* Footer */
        footer {
            background-color: var(--dark);
            color: var(--gray);
            text-align: center;
            padding: 20px 0;
            margin-top: auto;
        }

        /* Dropdown */
        .dropdown-menu {
            border-radius: 10px;
            border: none;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .dropdown-item:hover {
            background-color: var(--primary);
            color: var(--white);
        }
    </style>
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/LayoutClient/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- 🟡 NAVBAR -->

    <!-- Topbar Start -->
    <div class="container-fluid">
        @await Html.PartialAsync("LoginRegisterHeader.cshtml")
    </div>
    <!-- Topbar End -->

    <!-- 🔸 CONTENT -->
    <main class="flex-grow-1">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- 🔹 FOOTER -->
    @* <footer>
        <div>&copy; 2025 <strong>BagStore</strong>. All rights reserved.</div>
    </footer> *@
    <!-- Footer -->
    <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
        <partial name="~/Areas/Client/Views/LayoutShop/_FooterNew.cshtml" />
    </div>

    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/LayoutClient/lib/easing/easing.min.js"></script>
    <script src="@Url.Content("~/lib/owlcarousel/owl.carousel.min.js")"></script>

    <!-- Contact Javascript File -->
    <script src="~/LayoutClient/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/LayoutClient/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/LayoutClient/js/main.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
