@*
    Layout chính cho giao diện Client (BagStore)
*@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BagStore</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <!-- Owl Carousel -->
    <link rel="stylesheet" href="~/lib/owlcarousel/assets/owl.carousel.min.css" asp-append-version="true" />

    <!-- Custom Style -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <partial name="_ClientNavbar" />
        <div style="margin-top: 80px;"></div>

        <main class="flex-fill">
            @RenderBody()
        </main>

        <footer class="bg-dark text-light py-3 mt-auto">
            <div class="container text-center small">
                <p class="mb-0">&copy; 2025 - BagStore | Thiết kế bởi <strong>Đăng Trung</strong></p>
            </div>
        </footer>

        <a href="#" class="btn btn-primary back-to-top position-fixed bottom-0 end-0 m-4">
            <i class="fa fa-angle-double-up"></i>
        </a>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/easing/easing.min.js" asp-append-version="true"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
