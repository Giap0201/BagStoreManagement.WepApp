@using Microsoft.AspNetCore.Identity
@using BagStore.Web.Models.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BagStore</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" asp-area="Client" asp-controller="Home" asp-action="Index">BagStore</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Client" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-light me-2">
                                Xin chào, @(UserManager.GetUserName(User))
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Client" asp-controller="Account" asp-action="Profile">Hồ sơ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Client" asp-controller="Account" asp-action="ChangePassword">Đổi mật khẩu</a>
                        </li>
                        <li class="nav-item">
                            <form asp-area="Client" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link">Đăng xuất</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Client" asp-controller="Account" asp-action="Register">Đăng ký</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Client" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div>
        <a href="/Client/Home/Index">Trang chủ</a> |
        <a href="/Client/Account/Register">Đăng ký</a> |
        <a href="/Client/Account/Login">Đăng nhập</a> |
        <a href="/Client/Account/Profile">Hồ sơ</a>
    </div>

    <hr />

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>