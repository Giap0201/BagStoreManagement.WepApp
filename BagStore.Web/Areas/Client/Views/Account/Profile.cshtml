          method="post"
          class="d-inline"
          onsubmit="return confirm('Bạn có chắc chắn muốn xóa hồ sơ này không?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger ms-2">Xóa hồ sơ</button>
    </form> *@
</form>
</br>
<a asp-area="Client" asp-controller="Account" asp-action="Delete" class="btn btn-outline-danger">
    Xóa tài khoản
</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
