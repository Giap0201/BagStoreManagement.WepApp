@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Areas/Client/Views/Shared/_LayoutBagStore.cshtml";
}

<h2>Đổi mật khẩu</h2>

<form id="formChangePassword">
    <div class="mb-3 position-relative">
        <label for="OldPassword" class="form-label">Mật khẩu hiện tại</label>
        <div class="input-group">
            <input type="password" id="OldPassword" class="form-control" required />
            <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('OldPassword')">
                <i id="icon-OldPassword" class="fa-solid fa-eye"></i>
            </button>
        </div>
    </div>

    <div class="mb-3 position-relative">
        <label for="NewPassword" class="form-label">Mật khẩu mới</label>
        <div class="input-group">
            <input type="password" id="NewPassword" class="form-control" required />
            <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('NewPassword')">
                <i id="icon-NewPassword" class="fa-solid fa-eye"></i>
            </button>
        </div>
    </div>

    <div class="mb-3 position-relative">
        <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
        <div class="input-group">
            <input type="password" id="ConfirmPassword" class="form-control" required />
            <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('ConfirmPassword')">
                <i id="icon-ConfirmPassword" class="fa-solid fa-eye"></i>
            </button>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function togglePassword(id) {
            const input = document.getElementById(id);
            const icon = document.getElementById('icon-' + id);

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
    <script>
        const apiUrl = "/api/AccountApi";
        const token = sessionStorage.getItem("jwtToken");

        $("#formChangePassword").on("submit", function (e) {
            e.preventDefault();

            const payload = {
                oldPassword: $("#OldPassword").val(),
                newPassword: $("#NewPassword").val(),
                confirmPassword: $("#ConfirmPassword").val()
            };

            $.ajax({
                url: apiUrl + "/change-password",
                method: "PUT",
                headers: {
                    "Authorization": "Bearer " + token,
                    "Content-Type": "application/json"
                },
                data: JSON.stringify(payload),
                success: function (res) {
                    alert(res.message || "Đổi mật khẩu thành công");
                    $("#formChangePassword")[0].reset();
                },
                error: function (xhr) {
                    console.error("Lỗi đổi mật khẩu:", xhr);
                    if (xhr.responseJSON && xhr.responseJSON.errors) {
                        alert("Lỗi: " + JSON.stringify(xhr.responseJSON.errors));
                    } else if (xhr.responseText) {
                        alert("Lỗi: " + xhr.responseText);
                    } else {
                        alert("Không thể đổi mật khẩu!");
                    }
                }
            });
        });
    </script>
}
