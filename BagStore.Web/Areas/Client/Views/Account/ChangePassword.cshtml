@model BagStore.Web.Models.ViewModels.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Areas/Client/Views/Shared/_LayoutBagStore.cshtml";
}

@* <h2>Change Password</h2>

<form asp-action="ChangePassword" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CurrentPassword"></label>
        <input asp-for="CurrentPassword" class="form-control" type="password" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" class="form-control" type="password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmNewPassword"></label>
        <input asp-for="ConfirmNewPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Change Password</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} *@

<h2>Đổi mật khẩu</h2>

<form id="formChangePassword">
    <div class="mb-3">
        <label for="OldPassword" class="form-label">Mật khẩu hiện tại</label>
        <input type="password" id="OldPassword" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="NewPassword" class="form-label">Mật khẩu mới</label>
        <input type="password" id="NewPassword" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
        <input type="password" id="ConfirmPassword" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        const apiUrl = "/api/AccountApi";
        const token = sessionStorage.getItem("jwtToken");

        $("#formChangePassword").on("submit", function (e) {
            e.preventDefault();

            const payload = {
                oldPassword: $("#OldPassword").val(),
                newPassword: $("#NewPassword").val(),
                confirmPassword: $("#ConfirmPassword").val()
            };

            $.ajax({
                url: apiUrl + "/change-password",
                method: "PUT",
                headers: {
                    "Authorization": "Bearer " + token,
                    "Content-Type": "application/json"
                },
                data: JSON.stringify(payload),
                success: function (res) {
                    alert(res.message || "Đổi mật khẩu thành công");
                    $("#formChangePassword")[0].reset();
                },
                error: function (xhr) {
                    console.error("Lỗi đổi mật khẩu:", xhr);
                    if (xhr.responseJSON && xhr.responseJSON.errors) {
                        alert("Lỗi: " + JSON.stringify(xhr.responseJSON.errors));
                    } else if (xhr.responseText) {
                        alert("Lỗi: " + xhr.responseText);
                    } else {
                        alert("Không thể đổi mật khẩu!");
                    }
                }
            });
        });
    </script>
}
